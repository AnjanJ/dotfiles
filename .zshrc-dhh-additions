# Core Rails commands
alias r='bin/rails'
alias rs='bin/rails server'
alias rc='bin/rails console'
alias rgen='bin/rails generate'

# Database
alias rdb='bin/rails db'
alias rdm='bin/rails db:migrate'
alias rdr='bin/rails db:rollback'
alias rds='bin/rails db:seed'
alias rdt='bin/rails db:test:prepare'

# Testing (all prefixed with 'rt' for consistency)
# Smart functions that work with both Minitest and RSpec

# Helper function to detect test framework
_is_rspec_project() {
  [ -f "spec/spec_helper.rb" ] || grep -q "rspec-rails" Gemfile 2>/dev/null
}

# Run tests (detects framework automatically)
rt() {
  if _is_rspec_project; then
    bundle exec rspec "$@"
  else
    bin/rails test "$@"
  fi
}

# Run all tests
rta() {
  if _is_rspec_project; then
    bundle exec rspec
  else
    bin/rails test:all
  fi
}

# Run functional/controller tests
rtf() {
  if _is_rspec_project; then
    bundle exec rspec spec/controllers "$@"
  else
    bin/rails test:functionals "$@"
  fi
}

# Run unit/model tests
rtu() {
  if _is_rspec_project; then
    bundle exec rspec spec/models "$@"
  else
    bin/rails test:units "$@"
  fi
}

