# ============================================
# 17. ALIAS DISCOVERY FUNCTIONS
# ============================================

# Search aliases by keyword
# Usage: alias-search <keyword>
# Example: alias-search git
alias-search() {
  if [ -z "$1" ]; then
    echo "Usage: alias-search <keyword>"
    echo "Example: alias-search git"
    return 1
  fi
  echo "ğŸ” Searching for aliases matching: $1"
  alias | grep -i "$1" | sort
}

# Show all Rails-related aliases
# Usage: alias-rails
alias-rails() {
  echo "ğŸš‚ Rails Aliases:"
  echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
  ( alias 2>&1 | grep -E "^(r|b|cop|brake)" | sort | sed 's/=/ â†’ /' ) 2>/dev/null
  echo ""
  echo "ğŸ’¡ For Rails setup commands, run: alias-rails-setup"
}

