# ============================================
# 4. RAILS FUNCTIONS
# ============================================

# Create new Rails app (DHH-style minimal setup)
# Uses $DEFAULT_DB from main config
railsnew() {
  local app_name="$1"

  if [[ -z "$app_name" ]]; then
    echo "Usage: railsnew <app_name> [--pro]"
    echo ""
    echo "Options:"
    echo "  --pro    Set up professional development environment (RuboCop, Lefthook, etc.)"
    return 1
  fi

  # Check for --pro flag
  local setup_pro=false
  if [[ "$2" == "--pro" ]]; then
    setup_pro=true
  fi

  # Create Rails app
  echo "ğŸš€ Creating Rails app: $app_name"
  rails new "$app_name" \
    --database=${DEFAULT_DB:-postgresql} \
    --css=tailwind \
    --javascript=esbuild \
    --skip-test \
    --skip-jbuilder

  # Check if creation was successful
  if [[ ! -d "$app_name" ]]; then
    echo "âŒ Failed to create Rails app"
    return 1
  fi

  # Change into new app directory
  cd "$app_name"

  # Setup professional environment if requested
  if [[ "$setup_pro" == true ]]; then
    echo ""
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo "ğŸ”§ Setting up professional development environment..."
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    rails-setup-all
  else
    echo ""
    echo "âœ… Rails app created successfully!"
    echo ""
    echo "ğŸ’¡ Tip: Run 'rails-setup-all' to add professional development tools:"
    echo "   - RuboCop (Airbnb style guide)"
    echo "   - Lefthook (Git hooks)"
    echo "   - SimpleCov (90% coverage requirement)"
    echo "   - GitHub Actions CI"
    echo "   - Brakeman, RSpec, and more"
  fi
}

# Jump to Rails project root
cdroot() {
  while [[ ! -f "Gemfile" && "$PWD" != "/" ]]; do
    cd ..
  done
}

# Quick server start with environment
serve() {
  local env="${1:-development}"
  RAILS_ENV=$env bin/rails server
}

# Database reset and seed (with safety prompt)
dbreset() {
  echo "âš ï¸  This will destroy and recreate the database. Continue? (y/N)"
  read confirm
  if [[ $confirm == "y" ]]; then
    bin/rails db:drop db:create db:migrate db:seed
    echo "âœ… Database reset complete!"
  fi
}

# ============================================
# 5. DEVELOPMENT SERVICES
# ============================================
# Note: PG_VERSION is set in main ~/.zshrc

# Start common development services
devstart() {
  echo "ğŸš€ Starting development services..."

  # Redis (if using Sidekiq)
  if command -v redis-server &> /dev/null; then
    redis-server --daemonize yes
    echo "âœ… Redis started"
  fi

  # PostgreSQL (uses $PG_VERSION from main config)
  if command -v postgres &> /dev/null; then
    brew services start postgresql@${PG_VERSION}
    echo "âœ… PostgreSQL started"
  fi

  # Mailcatcher (for email testing)
  if command -v mailcatcher &> /dev/null; then
    mailcatcher
    echo "âœ… Mailcatcher started at http://localhost:1080"
  fi
}

# Stop development services
devstop() {
  echo "ğŸ›‘ Stopping development services..."
  brew services stop postgresql@${PG_VERSION}
  redis-cli shutdown 2>/dev/null
  pkill -f mailcatcher
  echo "âœ… Services stopped"
}

