# Show all custom aliases (overview)
# Usage: alias-list
alias-list() {
  echo "ğŸ“‹ All Custom Aliases:"
  echo "â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€"
  echo ""
  echo "Rails (r*):"
  alias | grep -E "^r[a-z]*=" | wc -l | xargs echo "  Count:"
  echo ""
  echo "Git (g*):"
  alias | grep -E "^g[a-z]*=" | wc -l | xargs echo "  Count:"
  echo ""
  echo "Tmux (tm*):"
  alias | grep -E "^tm[a-z]*=" | wc -l | xargs echo "  Count:"
  echo ""
  echo "Bundle (b*):"
  alias | grep -E "^b[a-z]*=" | wc -l | xargs echo "  Count:"
  echo ""
  echo "Use: alias-rails, alias-git, alias-tmux for details"
  echo "Use: alias-search <keyword> to search"
}

