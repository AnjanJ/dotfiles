# ============================================
# 9. PROFESSIONAL RAILS SETUP TOOLS
# ============================================

# Template directory location
RAILS_TEMPLATES_DIR="${HOME}/code/Tutorials/workflow/rails-templates/templates"

# Check if we're in a Rails project
_check_rails_project() {
  if [[ ! -f "Gemfile" ]]; then
    echo "âŒ Not in a Rails project (no Gemfile found)"
    return 1
  fi
  return 0
}

# Setup Lefthook (Git hooks manager)
rails-setup-lefthook() {
  _check_rails_project || return 1

  echo "ğŸ“‹ Installing Lefthook..."

  # Copy template
  if [[ -f "${RAILS_TEMPLATES_DIR}/lefthook.yml" ]]; then
    cp "${RAILS_TEMPLATES_DIR}/lefthook.yml" ./lefthook.yml
    echo "âœ… Copied lefthook.yml"
  else
    echo "âŒ Template not found: ${RAILS_TEMPLATES_DIR}/lefthook.yml"
    return 1
  fi

  # Install lefthook
  if bundle exec lefthook install 2>/dev/null; then
    echo "âœ… Lefthook installed successfully"
  else
    echo "âš ï¸  Run 'bundle install' first, then 'bundle exec lefthook install'"
  fi

  echo ""
  echo "ğŸ“š Lefthook configured with:"
  echo "   - Pre-commit: RuboCop (auto-fix), RSpec (fail-fast), Brakeman"
  echo "   - Pre-push: Full RSpec suite with coverage check"
  echo "   - Commit-msg: Conventional commit format enforcement"
}

# Setup RuboCop with Airbnb style guide
rails-setup-rubocop() {
  _check_rails_project || return 1

  echo "ğŸ“‹ Installing RuboCop configuration..."

  # Copy template
  if [[ -f "${RAILS_TEMPLATES_DIR}/.rubocop.yml" ]]; then
    cp "${RAILS_TEMPLATES_DIR}/.rubocop.yml" ./.rubocop.yml
    echo "âœ… Copied .rubocop.yml (Airbnb style guide)"
  else
    echo "âŒ Template not found: ${RAILS_TEMPLATES_DIR}/.rubocop.yml"
    return 1
  fi

  echo ""
  echo "ğŸ“š RuboCop configured with:"
  echo "   - Airbnb Ruby Style Guide"
  echo "   - Plugins: rails, rspec, performance, capybara, factory_bot"
  echo "   - 120 char line length"
  echo "   - Smart exclusions for spec/, config/, bin/"
}

# Setup SimpleCov (test coverage)
rails-setup-simplecov() {
  _check_rails_project || return 1

  echo "ğŸ“‹ Installing SimpleCov configuration..."

  # Check if spec_helper.rb exists
  if [[ ! -f "spec/spec_helper.rb" ]]; then
    echo "âŒ spec/spec_helper.rb not found. Install RSpec first."
    return 1
  fi

  # Copy template content to top of spec_helper.rb
  if [[ -f "${RAILS_TEMPLATES_DIR}/spec_helper_simplecov.rb" ]]; then
    # Create backup
    cp spec/spec_helper.rb spec/spec_helper.rb.backup

    # Prepend SimpleCov config
    cat "${RAILS_TEMPLATES_DIR}/spec_helper_simplecov.rb" spec/spec_helper.rb.backup > spec/spec_helper.rb

    echo "âœ… Added SimpleCov to spec/spec_helper.rb"
    echo "   (Backup saved as spec/spec_helper.rb.backup)"
  else
    echo "âŒ Template not found: ${RAILS_TEMPLATES_DIR}/spec_helper_simplecov.rb"
    return 1
  fi

  echo ""
  echo "ğŸ“š SimpleCov configured with:"
  echo "   - 90% minimum coverage requirement"
  echo "   - Groups: Models, Controllers, Services"
  echo "   - Filters: spec/, config/, vendor/, channels/, jobs/, mailers/"
}

# Setup GitHub Actions CI
rails-setup-ci() {
  _check_rails_project || return 1

  echo "ğŸ“‹ Installing GitHub Actions CI..."

  # Create .github/workflows directory
  mkdir -p .github/workflows

  # Copy template
  if [[ -f "${RAILS_TEMPLATES_DIR}/ci.yml" ]]; then
    cp "${RAILS_TEMPLATES_DIR}/ci.yml" .github/workflows/ci.yml
    echo "âœ… Copied .github/workflows/ci.yml"
  else
    echo "âŒ Template not found: ${RAILS_TEMPLATES_DIR}/ci.yml"
    return 1
  fi

  echo ""
  echo "ğŸ“š GitHub Actions CI configured with:"
  echo "   - Security scan (Brakeman)"
  echo "   - Linting (RuboCop)"
  echo "   - Tests (RSpec with coverage upload)"
  echo "   - Runs on: pull_request, push to main"
}

# Show recommended gems to add
rails-setup-gems() {
  echo "ğŸ“¦ Recommended Professional Rails Gems:"
  echo ""

  if [[ -f "${RAILS_TEMPLATES_DIR}/Gemfile.additions" ]]; then
    cat "${RAILS_TEMPLATES_DIR}/Gemfile.additions"
  else
    echo "âŒ Template not found: ${RAILS_TEMPLATES_DIR}/Gemfile.additions"
    return 1
  fi

  echo ""
  echo "ğŸ’¡ Add these to your Gemfile, then run: bundle install"
}

